{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Merit Documentation",
  "colors": {
    "primary": "#006B3E",
    "light": "#0ADF35",
    "dark": "#006B3E"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/appMerit/merit",
          "icon": "github"
        },
        {
          "anchor": "Website",
          "href": "https://appmerit.com",
          "icon": "globe"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/merit_logo_light.svg",
    "dark": "/logo/merit_logo_dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:daniel@appmerit.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "View on GitHub",
      "href": "https://github.com/appMerit/merit"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/appMerit/merit"
    }
  }
}
